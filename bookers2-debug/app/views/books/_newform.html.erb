
<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
	<p>error</p><!--エラーメッセ-->
		<% @book.errors.full_messages.each do |message| %>
		<span><%= message %></span>
<% end %>
<% end %>

<div class="field row">
	<%= f.label :title %>
	<%= f.text_field :title, class: "col-xs-12 book_title" %>
</div>
<div class="field row">
	<%= f.label :opinion %>
	<%= f.text_area :body, class: "col-xs-12 book_body" %>
</div>
     <div class="actions row">
     <%= f.submit class: "btn btn-primary col-xs-12" %>
</div>
     <% end %>



